@page
@model LogoutModel
@{
    ViewData["Title"] = "Saída Concluída";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm text-center">
                <div class="card-header bg-info text-dark">
                    <h3><i class="fas fa-door-open me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    @{
                        // O OnPost do Logout.cshtml.cs faz o logout e redireciona de volta para esta página.
                        // Portanto, o usuário sempre verá esta mensagem de sucesso.
                    }
                    <h5 class="card-title">Você saiu com segurança!</h5>
                    <p class="card-text">
                        Sua sessão foi encerrada. Esperamos ver você novamente em breve.
                    </p>
                    <hr />
                    <a asp-page="./Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-1"></i> Fazer Login Novamente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>