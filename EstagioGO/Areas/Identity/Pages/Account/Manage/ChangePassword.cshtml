@page
@model ChangePasswordModel
@using EstagioGO.Constants
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Alterar Senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;

    var user = await UserManager.GetUserAsync(User);
    bool isDefaultAdmin = user?.Email?.Equals(AppConstants.DefaultAdminEmail, StringComparison.OrdinalIgnoreCase) ?? false;
    bool isFirstAccess = !(user?.PrimeiroAcessoConcluido ?? true);

    bool hideOldPasswordField = isDefaultAdmin && isFirstAccess;

    if (isFirstAccess)
    {
        ViewData["Title"] = "Definir Nova Senha";
    }
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4>@ViewData["Title"]</h4>

        @if (isFirstAccess && !isDefaultAdmin)
        {
            <div class="alert alert-info">
                Por segurança, você precisa definir uma nova senha para continuar.
            </div>
        }

        @* A página DefaultAdminFirstAccess já mostra o aviso para o admin, então não precisamos repetir aqui *@

        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @if (!hideOldPasswordField) @* <-- CONDIÇÃO CORRIGIDA *@
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha atual" />
                    <label asp-for="Input.OldPassword" class="form-label"></label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
            }

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nova senha" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar nova senha" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Atualizar Senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}