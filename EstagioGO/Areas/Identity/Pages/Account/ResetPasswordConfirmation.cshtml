@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Senha Redefinida!";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm text-center">
                <div class="card-header bg-success text-white">
                    <h3><i class="fas fa-check-circle me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <h5 class="card-title">Sua senha foi alterada com sucesso.</h5>
                    <p class="card-text">
                        Agora você já pode acessar o sistema com sua nova senha.
                    </p>
                    <hr />
                    <a asp-page="./Login" class="btn btn-primary">Continuar para o Login</a>
                </div>
            </div>
        </div>
    </div>
</div>