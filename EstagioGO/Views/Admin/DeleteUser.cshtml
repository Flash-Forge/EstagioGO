@using EstagioGO.Constants
@model ApplicationUser

@{
    ViewData["Title"] = "Deletar Usuário";
    var isDefaultAdmin = Model.Email.Equals(AppConstants.DefaultAdminEmail, StringComparison.OrdinalIgnoreCase);
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (isDefaultAdmin)
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Atenção!</h4>
            <p>Este é o usuário administrador padrão do sistema e não pode ser excluído.</p>
            <hr>
            <p class="mb-0">Este usuário é essencial para o funcionamento do sistema.</p>
        </div>
        <a asp-action="UserManagement" class="btn btn-secondary">Voltar</a>
    }
    else
    {
        <h3>Tem certeza que deseja deletar este usuário?</h3>
        <div>
            <h4>Informações do Usuário</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeCompleto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cargo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cargo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
            </dl>

            <form asp-action="DeleteUser">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Deletar" class="btn btn-danger" />
                <a asp-action="UserManagement" class="btn btn-secondary ms-2">Cancelar</a>
            </form>
        </div>
    }
</div>