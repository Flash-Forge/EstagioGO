@model EstagioGO.Models.Analise.Avaliacao

@{
    ViewData["Title"] = "Excluir Avaliação";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Você tem certeza que deseja excluir esta avaliação?</h5>
                    <p>Esta ação é permanente e não pode ser desfeita.</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Estagiário</dt>
                        <dd class="col-sm-8">@Model.Estagiario?.Nome</dd>

                        <dt class="col-sm-4">Data da Avaliação</dt>
                        <dd class="col-sm-8">@Model.DataAvaliacao.ToString("dd/MM/yyyy 'às' HH:mm")</dd>

                        <dt class="col-sm-4">Avaliador</dt>
                        <dd class="col-sm-8">@(Model.Avaliador?.NomeCompleto ?? "N/A")</dd>

                        <dt class="col-sm-4">Média das Notas</dt>
                        <dd class="col-sm-8">
                            <span class="badge fs-6 @(Model.MediaNotas >= 3 ? "bg-success" : "bg-warning text-dark")">
                                @Model.MediaNotas.ToString("N2")
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Historico" asp-controller="Dashboard" asp-route-id="@Model.EstagiarioId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Cancelar
                        </a>
                        <form asp-action="Delete">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i>Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>