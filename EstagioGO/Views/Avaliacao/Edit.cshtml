@model EstagioGO.Models.Analise.ViewModels.AvaliacaoViewModel

@{
    ViewData["Title"] = "Editar Avaliação de Desempenho";
}

<div class="container mt-4">
    <form id="avaliacaoForm" asp-action="Edit" asp-route-id="@Model.AvaliacaoId" method="post">
        <input type="hidden" asp-for="AvaliacaoId" />
        <input type="hidden" asp-for="EstagiarioId" />

        <div class="card shadow-sm">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h4>
                        <span class="text-muted">Estagiário: <strong>@Model.EstagiarioNome</strong></span>
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Salvar Alterações</button>
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <h5 class="mt-2">Avaliação por Competências</h5>
                <p class="text-muted">Edite as notas e comentários de cada competência de 0 a 5.</p>

                <div class="accordion" id="accordionCategorias">
                    @for (int i = 0; i < Model.Categorias.Count; i++)
                    {
                        var categoriaId = $"categoria-{i}";
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@categoriaId">
                                <button class="accordion-button @(i == 0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@categoriaId">
                                    <strong>@Model.Categorias[i].Nome</strong>
                                </button>
                            </h2>
                            <div id="collapse-@categoriaId" class="accordion-collapse collapse @(i == 0 ? "show" : "")" data-bs-parent="#accordionCategorias">
                                <div class="accordion-body">
                                    <p class="text-muted fst-italic">@Model.Categorias[i].Descricao</p>
                                    <ul class="list-group list-group-flush">
                                        @for (int j = 0; j < Model.Categorias[i].Competencias.Count; j++)
                                        {
                                            <li class="list-group-item py-3">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-5 mb-2 mb-lg-0">
                                                        @Model.Categorias[i].Competencias[j].Descricao
                                                        <input type="hidden" asp-for="@Model.Categorias[i].CategoriaId" />
                                                        <input type="hidden" asp-for="@Model.Categorias[i].Competencias[j].CompetenciaId" />
                                                    </div>
                                                    <div class="col-lg-4 mb-2 mb-lg-0">
                                                        <div class="rating-container">
                                                            <div class="rating-icons" data-competencia-index-i="@i" data-competencia-index-j="@j">
                                                                @for (int k = 0; k <= 5; k++)
                                                                {
                                                                    <div class="rating-icon-wrapper" data-value="@k" title="@k">
                                                                        <i class="fas fa-circle"></i>
                                                                    </div>
                                                                }
                                                            </div>
                                                            <span class="rating-label"></span>
                                                        </div>
                                                        <input type="hidden" asp-for="@Model.Categorias[i].Competencias[j].Nota" />
                                                        <span asp-validation-for="@Model.Categorias[i].Competencias[j].Nota" class="text-danger d-block mt-1"></span>
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <input asp-for="@Model.Categorias[i].Competencias[j].Comentario" class="form-control form-control-sm" placeholder="Comentário (opcional)" />
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="form-group mt-4">
                    <label asp-for="ComentariosGerais" class="form-label fw-bold">Comentários Gerais e Plano de Desenvolvimento</label>
                    <textarea asp-for="ComentariosGerais" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="ComentariosGerais" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Historico" asp-controller="Dashboard" asp-route-id="@Model.EstagiarioId" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <partial name="_RatingComponentScripts" />
}