@model EstagioGO.Models.Analise.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>Nova Categoria
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label">Nome da Categoria</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Ex: Conhecimento Técnico" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="OrdemExibicao" class="form-label">Ordem de Exibição</label>
                                    <input asp-for="OrdemExibicao" class="form-control" type="number" min="1" value="1" />
                                    <span asp-validation-for="OrdemExibicao" class="text-danger"></span>
                                    <div class="form-text">Ordem em que a categoria aparecerá nas avaliações</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="3" 
                                      placeholder="Descreva o que esta categoria avalia..."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Ativo" class="form-check-input" checked />
                                <label asp-for="Ativo" class="form-check-label">
                                    Categoria ativa
                                </label>
                                <div class="form-text">Categorias inativas não aparecerão nas avaliações</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Salvar Categoria
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

