@model IEnumerable<EstagioGO.Models.Analise.Categoria>

@{
    ViewData["Title"] = "Gerenciar Categorias";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tags me-2"></i>Gerenciar Categorias
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Nova Categoria
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Ordem</th>
                                        <th>Nome</th>
                                        <th>Descrição</th>
                                        <th>Competências</th>
                                        <th>Status</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(item.Ativo ? "" : "table-secondary")">
                                            <td>@item.OrdemExibicao</td>
                                            <td>
                                                <strong>@item.Nome</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Descricao))
                                                {
                                                    @(item.Descricao.Length > 100 ? item.Descricao.Substring(0, 100) + "..." : item.Descricao)
                                                }
                                                else
                                                {
                                                    <em class="text-muted">Sem descrição</em>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @item.Competencias.Count(c => c.Ativo) ativas
                                                </span>
                                                @if (item.Competencias.Any(c => !c.Ativo))
                                                {
                                                    <span class="badge bg-secondary">
                                                        @item.Competencias.Count(c => !c.Ativo) inativas
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Ativo)
                                                {
                                                    <span class="badge bg-success">Ativa</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inativa</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" 
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm @(item.Ativo ? "btn-outline-secondary" : "btn-outline-success")" 
                                                                title="@(item.Ativo ? "Desativar" : "Ativar")"
                                                                onclick="return confirm('@(item.Ativo ? "Desativar" : "Ativar") esta categoria?')">
                                                            <i class="fas @(item.Ativo ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                                        </button>
                                                    </form>
                                                    @if (!item.Competencias.Any())
                                                    {
                                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                                           class="btn btn-sm btn-outline-danger" title="Excluir">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhuma categoria cadastrada</h5>
                            <p class="text-muted">Comece criando sua primeira categoria de competências.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Criar Primeira Categoria
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

