@model IEnumerable<EstagioGO.Models.Analise.Competencia>

@{
    ViewData["Title"] = "Gerenciar Competências";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-list-check me-2"></i>@ViewData["Title"]
                    </h3>
                    <div>
                        <a asp-action="Create" asp-route-categoriaId="@ViewBag.CategoriaIdSelecionada" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Nova Competência
                        </a>
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-tags me-1"></i>Gerenciar Categorias
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <form method="get" id="filtroForm">
                                <div class="input-group">
                                    <select name="categoriaId" class="form-select" onchange="this.form.submit()">
                                        <option value="">Filtrar por todas as categorias</option>
                                        @{
                                            var categoriasList = ViewBag.Categorias as SelectList;
                                            if (categoriasList != null)
                                            {
                                                foreach (var categoria in categoriasList)
                                                {
                                                    <option value="@categoria.Value" selected="@categoria.Selected">@categoria.Text</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table id="competenciasTable" class="table table-striped table-hover w-100">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Categoria</th>
                                        <th>Ordem</th>
                                        <th>Descrição</th>
                                        <th>Status</th>
                                        <th class="text-center no-sort">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(item.Ativo ? "" : "table-secondary text-muted")">
                                            <td>
                                                @if (item.Categoria != null)
                                                {
                                                    <strong>@item.Categoria.Nome</strong>
                                                }
                                            </td>
                                            <td>@item.OrdemExibicao</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Descricao))
                                                {
                                                    @(item.Descricao.Length > 80 ? item.Descricao.Substring(0, 80) + "..." : item.Descricao)
                                                }
                                                else
                                                {
                                                    <em class="text-muted">Sem descrição</em>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(item.Ativo ? "bg-success" : "bg-secondary")">
                                                    @(item.Ativo ? "Ativa" : "Inativa")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-info" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (item.AvaliacoesCompetencia?.Any() != true)
                                                    {
                                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-danger" title="Excluir">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#competenciasTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json'
                },
                responsive: true,
                order: [[0, 'asc'], [1, 'asc']], // Ordena primeiro por Categoria, depois por Ordem
                columnDefs: [{
                    "orderable": false,
                    "targets": 'no-sort'
                }]
            });
        });
    </script>
}