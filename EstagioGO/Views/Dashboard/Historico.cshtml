@using EstagioGO.Models.Estagio
@model Estagiario

@{
    ViewData["Title"] = "Histórico de Avaliações";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-history me-2"></i>@ViewData["Title"]: <strong>@Model.Nome</strong>
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Voltar para o Dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-user-graduate me-2"></i>Dados do Estagiário
            </h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-2">Curso:</dt>
                <dd class="col-sm-10">@Model.Curso</dd>
                <dt class="col-sm-2">Instituição:</dt>
                <dd class="col-sm-10">@Model.InstituicaoEnsino</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-star-half-alt me-2"></i>Avaliações Realizadas
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Avaliacoes == null || !Model.Avaliacoes.Any())
            {
                <div class="alert alert-info" role="alert">
                    Nenhuma avaliação encontrada para este estagiário.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="historicoTable" class="table table-hover w-100">
                        <thead class="table-dark">
                            <tr>
                                <th>Data</th>
                                <th class="text-center">Média</th>
                                <th>Avaliador</th>
                                <th class="text-center no-sort">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var avaliacao in Model.Avaliacoes.OrderByDescending(a => a.DataAvaliacao))
                            {
                                <tr>
                                    <td>@avaliacao.DataAvaliacao.ToString("dd/MM/yyyy 'às' HH:mm")</td>
                                    <td class="text-center">
                                        <span class="badge fs-6 @(avaliacao.MediaNotas >= 3 ? "bg-success" : "bg-warning text-dark")">
                                            @avaliacao.MediaNotas.ToString("N2")
                                        </span>
                                    </td>
                                    <td>@(avaliacao.Avaliador?.NomeCompleto ?? "N/A")</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailsModal-@avaliacao.Id" title="Ver Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            @if (User.IsInRole("Administrador") || User.IsInRole("Coordenador"))
                                            {
                                                <a asp-controller="Avaliacao" asp-action="Edit" asp-route-id="@avaliacao.Id" class="btn btn-sm btn-outline-warning" title="Editar Avaliação">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="Avaliacao" asp-action="Delete" asp-route-id="@avaliacao.Id" class="btn btn-sm btn-outline-danger" title="Excluir Avaliação">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@if (Model.Avaliacoes != null)
{
    @foreach (var avaliacao in Model.Avaliacoes)
    {
        <div class="modal fade" id="detailsModal-@avaliacao.Id" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Detalhes da Avaliação - @avaliacao.DataAvaliacao.ToString("dd/MM/yyyy")</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h6>Comentários Gerais</h6>
                        <p class="text-muted fst-italic">@(string.IsNullOrEmpty(avaliacao.ComentariosGerais) ? "Nenhum comentário geral foi adicionado." : avaliacao.ComentariosGerais)</p>
                        <hr />
                        <h6>Notas por Competência</h6>
                        <div class="accordion" id="accordionModal-@avaliacao.Id">
                            @foreach (var categoria in avaliacao.CompetenciasAvaliadas.GroupBy(c => c.Competencia.Categoria))
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseModal-@avaliacao.Id-@categoria.Key.Id">
                                            @categoria.Key.Nome
                                        </button>
                                    </h2>
                                    <div id="collapseModal-@avaliacao.Id-@categoria.Key.Id" class="accordion-collapse collapse" data-bs-parent="#accordionModal-@avaliacao.Id">
                                        <div class="accordion-body">
                                            <ul class="list-group">
                                                @foreach (var compAvaliada in categoria.OrderBy(c => c.Competencia.OrdemExibicao))
                                                {
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span>@compAvaliada.Competencia.Descricao</span>
                                                        <span class="badge bg-primary rounded-pill">Nota: @compAvaliada.Nota</span>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#historicoTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json'
                },
                responsive: true,
                order: [[0, 'desc']], // Ordena pela data, da mais recente para a mais antiga
                columnDefs: [{
                    "orderable": false,
                    "targets": 'no-sort'
                }]
            });
        });
    </script>
}