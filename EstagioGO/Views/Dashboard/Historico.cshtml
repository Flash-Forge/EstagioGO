@model EstagioGO.Models.Domain.Estagiario

@{
    ViewData["Title"] = "Histórico de Avaliações";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-history me-2"></i>@ViewData["Title"]: @Model.Nome
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Voltar para o Dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-user-graduate me-2"></i>Dados do Estagiário
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6"><strong>Curso:</strong> @Model.Curso</div>
                <div class="col-md-6"><strong>Instituição:</strong> @Model.InstituicaoEnsino</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-star-half-alt me-2"></i>Avaliações Realizadas
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Avaliacoes.Any())
            {
                <div class="alert alert-info" role="alert">
                    Nenhuma avaliação encontrada para este estagiário.
                </div>
            }
            else
            {
                <div class="accordion" id="accordionAvaliacoes">
                    @foreach (var avaliacao in Model.Avaliacoes)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@avaliacao.Id">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@avaliacao.Id" aria-expanded="false" aria-controls="collapse-@avaliacao.Id">
                                    <div class="w-100 d-flex justify-content-between pe-3">
                                        <span><strong>Data:</strong> @avaliacao.DataAvaliacao.ToString("dd/MM/yyyy")</span>
                                        <span>
                                            <strong>Média:</strong>
                                            <span class="badge @(avaliacao.MediaNotas >= 3 ? "bg-success" : "bg-danger") fs-6">
                                                @avaliacao.MediaNotas.ToString("N2")
                                            </span>
                                        </span>
                                        <span><strong>Avaliador:</strong> @(avaliacao.Avaliador?.NomeCompleto ?? "N/A")</span>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse-@avaliacao.Id" class="accordion-collapse collapse" aria-labelledby="heading-@avaliacao.Id" data-bs-parent="#accordionAvaliacoes">
                                <div class="accordion-body">
                                    <strong>Comentários Gerais:</strong>
                                    <p class="text-muted">@(string.IsNullOrEmpty(avaliacao.ComentariosGerais) ? "Nenhum comentário geral foi adicionado." : avaliacao.ComentariosGerais)</p>
                                    @* Aqui você poderia adicionar mais detalhes, como a nota de cada competência, se desejar *@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>