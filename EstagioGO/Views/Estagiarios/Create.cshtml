@using EstagioGO.Models.Estagio
@model CreateEstagiarioViewModel

@{
    ViewData["Title"] = "Cadastrar Novo Estagiário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5><i class="fas fa-id-card me-2 text-primary"></i>Dados Pessoais</h5>
                        <hr class="mt-2 mb-3" />
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="DataNascimento" class="form-label"></label>
                                <input asp-for="DataNascimento" type="date" class="form-control" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CPF" class="form-label"></label>
                                <input asp-for="CPF" class="form-control cpf-mask" placeholder="000.000.000-00" />
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefone" class="form-label"></label>
                                <input asp-for="Telefone" class="form-control phone-mask" placeholder="(00) 00000-0000" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="mt-4"><i class="fas fa-at me-2 text-primary"></i>Dados da Conta de Acesso</h5>
                        <hr class="mt-2 mb-3" />
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="exemplo@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">Este será o login do estagiário no sistema.</small>
                        </div>

                        <h5 class="mt-4"><i class="fas fa-briefcase me-2 text-primary"></i>Dados do Estágio</h5>
                        <hr class="mt-2 mb-3" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SupervisorId" class="form-label"></label>
                                <select asp-for="SupervisorId" class="form-select" asp-items="ViewBag.SupervisorId">
                                    <option value="">-- Selecione o Supervisor --</option>
                                </select>
                                <span asp-validation-for="SupervisorId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Matricula" class="form-label"></label>
                                <input asp-for="Matricula" class="form-control" />
                                <span asp-validation-for="Matricula" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Curso" class="form-label"></label>
                                <input asp-for="Curso" class="form-control" />
                                <span asp-validation-for="Curso" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="InstituicaoEnsino" class="form-label"></label>
                                <input asp-for="InstituicaoEnsino" class="form-control" />
                                <span asp-validation-for="InstituicaoEnsino" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataInicio" class="form-label"></label>
                                <input asp-for="DataInicio" type="date" class="form-control" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataTermino" class="form-label"></label>
                                <input asp-for="DataTermino" type="date" class="form-control" />
                                <span asp-validation-for="DataTermino" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="Ativo" checked />
                            <label class="form-check-label" asp-for="Ativo"></label>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Voltar para a lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Salvar Estagiário
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Máscara para CPF
            $('.cpf-mask').on('input', function () {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 11) {
                    value = value.slice(0, 11);
                }
                if (value.length > 9) {
                    value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, "$1.$2.$3-$4");
                } else if (value.length > 6) {
                    value = value.replace(/(\d{3})(\d{3})(\d+)/, "$1.$2.$3");
                } else if (value.length > 3) {
                    value = value.replace(/(\d{3})(\d+)/, "$1.$2");
                }
                $(this).val(value);
            });

            // Máscara para Telefone
            $('.phone-mask').on('input', function () {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 11) {
                    value = value.slice(0, 11);
                }
                if (value.length > 10) {
                    value = value.replace(/(\d{2})(\d{5})(\d{4})/, "($1) $2-$3");
                } else if (value.length > 6) {
                    value = value.replace(/(\d{2})(\d{4})(\d+)/, "($1) $2-$3");
                } else if (value.length > 2) {
                    value = value.replace(/(\d{2})(\d+)/, "($1) $2");
                }
                $(this).val(value);
            });

            // Validação das datas no cliente
            $('form').submit(function (e) {
                const inicio = new Date($('#DataInicio').val());
                const termino = new Date($('#DataTermino').val());
                const nascimento = new Date($('DataNascimento').val())

                if (inicio >= termino) {
                    e.preventDefault();
                    alert('A data de início não pode ser posterior ou igual à data de término.');
                    return false;
                }

                if (nascimento >= inicio || nascimento >= termino) {
                    e.preventDefault();
                    alert('A data de nascimento não pode ser posterior a data de início');
                    return false;
                }
            });
        });
    </script>
}