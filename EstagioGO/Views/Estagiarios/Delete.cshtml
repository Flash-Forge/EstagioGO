@using EstagioGO.Models.Estagio
@model Estagiario

@{
    ViewData["Title"] = "Excluir Estagiário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Você tem certeza que deseja excluir este estagiário?</h5>
                    <p>
                        Esta ação é permanente e removerá:
                        <ul>
                            <li>O perfil do estagiário <strong>@Model.Nome</strong>.</li>
                            <li>A conta de acesso ao sistema associada ao e-mail <strong>@Model.User?.Email</strong>.</li>
                        </ul>
                    </p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">CPF</dt>
                        <dd class="col-sm-8">@Model.CPFFormatado</dd>

                        <dt class="col-sm-4">E-mail de Acesso</dt>
                        <dd class="col-sm-8">@Model.User?.Email</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Cancelar
                        </a>
                        <form asp-action="Delete">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i>Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>