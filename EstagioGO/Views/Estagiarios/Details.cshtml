@using EstagioGO.Models.Estagio
@model Estagiario

@{
    ViewData["Title"] = "Detalhes do Estagiário";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-graduate me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="text-primary">@Model.Nome</h5>
                            <hr />
                            <div class="row">
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-id-card me-2 text-muted"></i>CPF:</strong>
                                    <p class="text-secondary">@Model.CPFFormatado</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-birthday-cake me-2 text-muted"></i>Nascimento:</strong>
                                    <p class="text-secondary">@Model.DataNascimento.ToString("dd/MM/yyyy")</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-phone me-2 text-muted"></i>Telefone:</strong>
                                    <p class="text-secondary">@Model.TelefoneFormatado</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-user-tag me-2 text-muted"></i>Matrícula:</strong>
                                    <p class="text-secondary">@Model.Matricula</p>
                                </div>
                            </div>

                            <h5 class="mt-4 text-primary">Dados do Estágio</h5>
                            <hr />
                            <div class="row">
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-graduation-cap me-2 text-muted"></i>Curso:</strong>
                                    <p class="text-secondary">@Model.Curso</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-school me-2 text-muted"></i>Instituição de Ensino:</strong>
                                    <p class="text-secondary">@Model.InstituicaoEnsino</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-calendar-alt me-2 text-muted"></i>Início do Estágio:</strong>
                                    <p class="text-secondary">@Model.DataInicio.ToString("dd/MM/yyyy")</p>
                                </div>
                                <div class="col-lg-6">
                                    <strong><i class="fas fa-calendar-times me-2 text-muted"></i>Término do Estágio:</strong>
                                    <p class="text-secondary">@(Model.DataTermino?.ToString("dd/MM/yyyy") ?? "Não definido")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-center mb-3">Status e Vínculos</h5>
                                    <dl class="row">
                                        <dt class="col-12"><strong><i class="fas fa-toggle-on me-2 text-muted"></i>Status:</strong></dt>
                                        <dd class="col-12 mb-3">
                                            @if (Model.Ativo)
                                            {
                                                <span class="badge bg-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inativo</span>
                                            }
                                        </dd>

                                        <dt class="col-12"><strong><i class="fas fa-user-shield me-2 text-muted"></i>Supervisor:</strong></dt>
                                        <dd class="col-12 mb-3">@Model.Supervisor.NomeCompleto</dd>

                                        <dt class="col-12"><strong><i class="fas fa-at me-2 text-muted"></i>Email de Acesso:</strong></dt>
                                        <dd class="col-12 mb-3">@Model.User.Email</dd>

                                        <dt class="col-12"><strong><i class="fas fa-calendar-plus me-2 text-muted"></i>Data de Cadastro:</strong></dt>
                                        <dd class="col-12">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Voltar para a Lista
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a asp-controller="Dashboard" asp-action="Historico" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-history me-1"></i>Ver Histórico
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>