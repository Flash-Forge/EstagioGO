@model IEnumerable<EstagioGO.Models.Domain.Estagiario>
@{
    ViewData["Title"] = "Estagiários";
}

<h1>Estagiários</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Cadastrar Novo Estagiário</a>

<table id="estagiarios-table" class="table table-striped table-hover nowrap" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Nome)</th>
            <th>@Html.DisplayNameFor(m => m.CPF)</th>
            <th>@Html.DisplayNameFor(m => m.Telefone)</th>
            <th>@Html.DisplayNameFor(m => m.Matricula)</th>
            <th>@Html.DisplayNameFor(m => m.Curso)</th>
            <th>@Html.DisplayNameFor(m => m.InstituicaoEnsino)</th>
            <th>@Html.DisplayNameFor(m => m.DataInicio)</th>
            <th>@Html.DisplayNameFor(m => m.DataTermino)</th>
            <th>Supervisor</th>
            <th>Usuário</th>
            <th>@Html.DisplayNameFor(m => m.Ativo)</th>
            <th>@Html.DisplayNameFor(m => m.DataCadastro)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.CPFFormatado</td>
                <td>@item.TelefoneFormatado</td>
                <td>@item.Matricula</td>
                <td>@item.Curso</td>
                <td>@item.InstituicaoEnsino</td>
                <td>@item.DataInicio.ToString("dd/MM/yyyy")</td>
                <td>@(item.DataTermino?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                <td>@item.Supervisor.NomeCompleto</td>
                <td>@item.User.NomeCompleto</td>
                <td>@(item.Ativo ? "Sim" : "Não")</td>
                <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#estagiarios-table').DataTable({
                responsive: true,
                autoWidth: false,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'excelHtml5', text: '<i class="bi bi-file-earmark-excel"></i> Excel' },
                    { extend: 'csvHtml5',   text: '<i class="bi bi-file-earmark-spreadsheet"></i> CSV' },
                    { extend: 'pdfHtml5',   text: '<i class="bi bi-file-earmark-pdf"></i> PDF' }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json'
                }
            });
        });
    </script>
}