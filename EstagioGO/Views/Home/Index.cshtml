@{
    ViewData["Title"] = "Dashboard";
}

@section Toolbar {
    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-outline-secondary">Exportar</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Filtrar</button>
    </div>
}

<div class="row">
    <!-- Estatísticas Rápidas -->
    <div class="col-md-3 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Total de Estagiários</h6>
                        <h3 class="mb-0">24</h3>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-users fa-2x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Ativos Hoje</h6>
                        <h3 class="mb-0">18</h3>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-calendar-check fa-2x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Avaliações Pendentes</h6>
                        <h3 class="mb-0">5</h3>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-star fa-2x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Faltas Este Mês</h6>
                        <h3 class="mb-0">3</h3>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-user-times fa-2x text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Ações Rápidas -->
    <div class="col-md-6 mb-4">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ações Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Frequencia" asp-action="Create" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-plus-circle me-2"></i>Registrar Frequência
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Avaliacoes" asp-action="Create" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-star me-2"></i>Nova Avaliação
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Estagiarios" asp-action="Create" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-user-plus me-2"></i>Novo Estagiário
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-user-cog me-2"></i>Novo Usuário
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Próximas Atividades -->
    <div class="col-md-6 mb-4">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Próximas Atividades</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Avaliação de Desempenho</h6>
                            <small class="text-muted">João Silva - 15/12/2024</small>
                        </div>
                        <span class="badge bg-warning">Pendente</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Término de Estágio</h6>
                            <small class="text-muted">Maria Santos - 20/12/2024</small>
                        </div>
                        <span class="badge bg-info">Próximo</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Reunião de Acompanhamento</h6>
                            <small class="text-muted">Todos os supervisores - 22/12/2024</small>
                        </div>
                        <span class="badge bg-secondary">Agendado</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Estagiários com Avaliação Pendente -->
    <div class="col-12">
        <div class="card dashboard-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Estagiários com Avaliação Pendente</h5>
                <a asp-controller="Avaliacoes" asp-action="Index" class="btn btn-sm btn-outline-primary">Ver Todos</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Curso</th>
                                <th>Instituição</th>
                                <th>Supervisor</th>
                                <th>Data Prevista</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>João Silva</td>
                                <td>Engenharia de Software</td>
                                <td>Universidade Federal</td>
                                <td>Carlos Oliveira</td>
                                <td>15/12/2024</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Avaliar</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Ana Costa</td>
                                <td>Administração</td>
                                <td>Faculdade Estadual</td>
                                <td>Mariana Santos</td>
                                <td>18/12/2024</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">Avaliar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>