@using Microsoft.AspNetCore.Identity
@using EstagioGO.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var isEstagiario = User.IsInRole("Estagiario");

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-1"></i>
                @if (!string.IsNullOrEmpty(user?.NomeCompleto))
                {
                    @user.NomeCompleto
                }
                else
                {
                    @User.Identity?.Name
                }
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-person me-2"></i>Meu Perfil
                    </a>
                </li>

                @if (isEstagiario)
                {
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/EstagiarioProfile">
                            <i class="bi bi-card-checklist me-2"></i>Meus Dados
                        </a>
                    </li>
                }

                @if (User.IsInRole("Administrador") || User.IsInRole("Coordenador"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Estagiarios" asp-action="Index">
                            <i class="bi bi-people me-2"></i>Gerenciar Estagiários
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-bar-chart me-2"></i>Relatórios
                        </a>
                    </li>
                }

                @if (User.IsInRole("Supervisor"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Frequencia" asp-action="Index">
                            <i class="bi bi-calendar-check me-2"></i>Registrar Frequência
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Avaliacao" asp-action="Create">
                            <i class="bi bi-star me-2"></i>Avaliar Estagiários
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">
                            <i class="bi bi-box-arrow-right me-2"></i>Sair
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
    }
</ul>