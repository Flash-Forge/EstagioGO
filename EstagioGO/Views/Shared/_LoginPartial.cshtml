@using Microsoft.AspNetCore.Identity
@using EstagioGO.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @if (User.FindFirst("NomeCompleto") != null && !string.IsNullOrEmpty(User.FindFirst("NomeCompleto").Value))
                {
                    @User.FindFirst("NomeCompleto").Value
                }
                else
                {
                    @User.Identity?.Name
                }
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Meu Perfil</a>
                </li>
                @if (User.IsInRole("Administrador") || User.IsInRole("Coordenador"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Estagiarios" asp-action="Index">Gerenciar Estagiários</a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Relatorios" asp-action="Index">Relatórios</a>
                    </li>
                }
                @if (User.IsInRole("Supervisor"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Frequencias" asp-action="Register">Registrar Frequência</a>
                    </li>
                }
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">Sair</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>